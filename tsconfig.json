{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native", 
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
